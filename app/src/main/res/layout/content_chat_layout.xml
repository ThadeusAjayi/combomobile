<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shopspreeng.combocard.ChatTestLayout"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_chat_test_layout">


    <TextView
        android:id="@+id/message_tv"
        android:layout_width="319dp"
        android:layout_height="71dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="This is my initial chat"
        android:gravity="left|center_vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/sender_tv"
        android:layout_width="152dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:gravity="right|bottom"
        app:layout_constraintBottom_toBottomOf="@+id/message_tv"
        app:layout_constraintEnd_toEndOf="@+id/message_tv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/message_tv"
        app:layout_constraintTop_toTopOf="@+id/message_tv"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>
